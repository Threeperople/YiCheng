<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:id="@+id/relativie_city_paly"
    android:layout_height="match_parent"
    android:background="@color/text"
    >

    <ImageView
        android:id="@+id/imageview_city_play_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_comment" />

    <TextView
        android:id="@+id/textview_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:layout_alignTop="@id/imageview_city_play_bottom"
        android:layout_alignRight="@+id/imageview_city_play_bottom"
        android:textColor="@color/white"
        android:text="8" />
</RelativeLayout>