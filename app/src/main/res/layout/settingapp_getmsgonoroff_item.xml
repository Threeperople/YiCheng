<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:background="#fff">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_setting_bell"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="允许消息推送"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />
        <com.leaking.slideswitch.SlideSwitch
            android:layout_margin="7dp"
            android:id="@+id/slideSwitch_setting"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            slideswitch:isOpen="false"
            slideswitch:shape="circle"
            slideswitch:themeColor="#0f0"
            >
        </com.leaking.slideswitch.SlideSwitch>
</LinearLayout>