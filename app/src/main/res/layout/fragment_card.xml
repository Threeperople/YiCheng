<?xml version="1.0" encoding="utf-8"?><!-- 使用AndroidAutoLayout进行卡片适配 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:focusable="false"
        card_view:cardElevation="10dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/blogday_item_backImage"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:failureImageScaleType="fitXY"
            app:retryImageScaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/blogday_item_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#FFBF20"
                android:gravity="center_vertical"
                android:text="data 29"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/blogday_lines"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/label_orange"
                />
            <TextView
                android:id="@+id/blogday_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="22222222222222222222222222222222222"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:maxLines="2"
                android:textColor="#fff"
                android:textSize="10sp"
                android:ellipsize="end"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>