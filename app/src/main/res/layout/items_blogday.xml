<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/blogday_item_backImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:failureImageScaleType="centerInside"
        app:retryImageScaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/blogday_item_backImage"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/blogday_item_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#FFBF20"
            android:gravity="center_vertical"
            android:text="data 29"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/blogday_lines"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/label_orange"
            />
        <TextView
            android:id="@+id/blogday_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="22222222222222222222222222222222222"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:maxLines="2"
            android:textColor="#fff"
            android:textSize="10sp"
            android:ellipsize="end"
            />
    </LinearLayout>


</RelativeLayout>