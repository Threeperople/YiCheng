<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_imgurl"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/logo"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#FFFFFF"
            />
    </LinearLayout>

    <RelativeLayout
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="活动标题"
            android:maxLines="2"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/iv_stand"
            android:layout_below="@+id/tv_title"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:src="@mipmap/label_activity"
            />
        <TextView
            android:id="@+id/tv_apply"
            android:layout_toRightOf="@+id/iv_stand"
            android:layout_alignTop="@+id/iv_stand"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名已结束"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/tv_city"
            android:layout_below="@+id/tv_apply"
            android:layout_alignBottom="@+id/iv_stand"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_stand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区名"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_exphead"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_expname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名字"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/iv_exphead"
            android:layout_toRightOf="@+id/iv_exphead"
            android:layout_toEndOf="@+id/iv_exphead" />

    </RelativeLayout>


</RelativeLayout>